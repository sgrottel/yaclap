{
  "version": 3,
  "configurePresets": [
    // Base
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/../out/build/${presetName}",
      "installDir": "${sourceDir}/../out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },

    // Ansi
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "inherits": "x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x86-debug",
      "displayName": "x86 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x86-release",
      "displayName": "x86 Release",
      "inherits": "x86-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    // Unicode
    {
      "name": "x64-debug-w",
      "displayName": "x64 Debug WChar",
      "inherits": "x64-debug",
      "cacheVariables": {
        "UNICODE": "_Unicode"
      }
    },
    {
      "name": "x64-release-w",
      "displayName": "x64 Release WChar",
      "inherits": "x64-release",
      "cacheVariables": {
        "UNICODE": "_Unicode"
      }
    },
    {
      "name": "x86-debug-w",
      "displayName": "x86 Debug WChar",
      "inherits": "x86-debug",
      "cacheVariables": {
        "UNICODE": "_Unicode"
      }
    },
    {
      "name": "x86-release-w",
      "displayName": "x86 Release WChar",
      "inherits": "x86-release",
      "cacheVariables": {
        "UNICODE": "_Unicode"
      }
    },

    // CLang ANSI
    {
      "name": "x64-debug-clang",
      "displayName": "x64 Debug CLang",
      "inherits": "x64-debug",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "x64-release-clang",
      "displayName": "x64 Release CLang",
      "inherits": "x64-release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "x86-debug-clang",
      "displayName": "x86 Debug CLang",
      "inherits": "x86-debug",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "x86-release-clang",
      "displayName": "x86 Release CLang",
      "inherits": "x86-release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },

    // CLang Unicode
    {
      "name": "x64-debug-clang-w",
      "displayName": "x64 Debug CLang WChar",
      "inherits": "x64-debug-clang",
      "cacheVariables": {
        "UNICODE": "_Unicode"
      }
    },
    {
      "name": "x64-release-clang-w",
      "displayName": "x64 Release CLang WChar",
      "inherits": "x64-release-clang",
      "cacheVariables": {
        "UNICODE": "_Unicode"
      }
    },
    {
      "name": "x86-debug-clang-w",
      "displayName": "x86 Debug CLang WChar",
      "inherits": "x86-debug-clang",
      "cacheVariables": {
        "UNICODE": "_Unicode"
      }
    },
    {
      "name": "x86-release-clang-w",
      "displayName": "x86 Release CLang WChar",
      "inherits": "x86-release-clang",
      "cacheVariables": {
        "UNICODE": "_Unicode"
      }
    }

  ]
}
